  
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10" >
      <%= render 'shared/errors', obj: @article%>
      <%= render 'shared/flash' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-white rounded" ,local: true) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :name, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_area :description, rows: 10 ,class: "form-control"%>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-success btn-lg"%>  
        </div>
      <% end %>
    </div>

    <%= link_to '[ Back to articles listing ]', articles_path, class: "text-center" %>
  </div>
</div>