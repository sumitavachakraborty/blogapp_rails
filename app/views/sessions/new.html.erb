<div class="container">
    <%= render 'shared/flash' %>
    <h1 class="text-center mt-4">Login for the blog</h1>
    <div class="row justify-content-center">
    <div class="col-10" >
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-5 bg-white rounded" ,local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter the email"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter your password"%>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit "Log in" ,class: "btn btn-outline-success btn-lg"%>  
        </div>
      <% end %>
    </div>

    <%= link_to '[ Back to articles listing ]', articles_path, class: "text-center" %>
  </div>
</div>