<div class="container">
    <h1 class="text-center mt-4">List of all Bloggers</h1>
    <%= render 'shared/flash' %>
            <% @user.each do |user| %>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-8 mt-4">
                            <div class="card text-center shadow p-3 mb-5 bg-white rounded">
                                <div class="card-header">
                                    <%= link_to user.username, user %>
                                </div>
                                <div class="card-body">
                                    <p class="card-text"><%= pluralize(user.articles.count, "articles") %></p>
                                    <% if logged_in? && (user == current_user || current_user.admin?) %>
                                        <a href="#"><%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-outline-success"%></a>
                                        <a href="#"><%= link_to 'Delete Profile', user_path(current_user), class: "btn btn-outline-danger" , data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%></a>
                                    <% end %>
                                    <a href="#"><%= link_to 'Show Profile', user, class: "btn btn-outline-info"%></a>                                
                                </div>
                                <div class="card-footer text-body-secondary">
                                    <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
</div>
